<h1>Here are your Flats</h1>
<ul>
  <% @flats.each do |flat| %>
    <li><%= link_to flat.name, flat_path(flat) %> <%= link_to "Update a flat", edit_flat_path(flat) %> <i class="fa-solid fa-trash-can"></i> <%= link_to "Delete",
  flat_path(flat),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%></li>
  <% end %>
</ul>

<i class="fa-solid fa-circle-plus"></i><%= link_to "Create new flat", new_flat_path %>
<i class="fa-solid fa-pen-to-square"></i>
